<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/iron">
        <Space
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/space"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_dialog_ok"
            android:layout_toRightOf="@id/space"
            android:text="已经选择的菜品"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/base_red"
            android:layout_toLeftOf="@+id/right_space"
            android:id="@+id/clear"
            android:background="@color/iron"
            android:text="清空"/>
        <Space
            android:layout_width="20sp"
            android:id="@+id/right_space"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.lqr.recyclerview.LQRRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_cart_list"
        app:rv_divider_color="@color/colorPink"
        app:rv_divider_size="2dp"
        app:rv_orientation="vertical"
        app:rv_default_animator_open="true"
        app:rv_type="grid"
        app:rv_column="1"/>
</LinearLayout>