<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/best_head_bg</item>
        <item name="colorPrimaryDark">@color/best_head_bg</item>
        <item name="colorAccent">@color/best_head_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/best_head_bg</item>
        <item name="colorPrimaryDark">@color/best_head_bg</item>
        <item name="colorAccent">@color/best_head_bg</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>
    <style name="DarkActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/best_head_bg</item>
    </style>
    <style name="main_tab">
        <item name="android:textColor">@drawable/tab_textcolor</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
